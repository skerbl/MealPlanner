<Window x:Class="MPDesktopUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:MPData.ViewModels;assembly=MPData"
        d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
        mc:Ignorable="d"
        TextOptions.TextRenderingMode="ClearType"
        TextOptions.TextFormattingMode="Display"
        Title="MainWindow" Height="720" Width="1200">
    <DockPanel>
        <Menu DockPanel.Dock="Top" FontSize="14">
            <MenuItem Header="_Datei">
                <MenuItem Header="_Einstellungen" Click="Menu_Settings"/>
                <MenuItem Header="_Drucken" />
                <Separator />
                <MenuItem Header="_Beenden" Click="Menu_Close" />
            </MenuItem>
        </Menu>

        <Grid DockPanel.Dock="Bottom" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding NewItem}" FontSize="14" />
            <Button Grid.Column="1" Width="100" HorizontalAlignment="Left" FontSize="14"
                    Content="Hinzufügen" Click="OnClick_AddNewDishItem" />
        </Grid>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <TabControl Grid.Column="0" x:Name="selectionTabs" FontSize="15" >
                <TabItem Header="Suppen" Name="starters">
                    <Border BorderBrush="AliceBlue" BorderThickness="1">
                        <ListView x:Name="ListSoups" FontSize="17"
                                  ItemsSource="{Binding Starters}"
                                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"/>
                    </Border>
                </TabItem>
                <TabItem Header="Hauptgerichte" Name="mainDishes">
                    <Border BorderBrush="AliceBlue" BorderThickness="1">
                        <ListView x:Name="ListMainDishes" FontSize="17"
                                  ItemsSource="{Binding MainDishes}"
                                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"/>
                    </Border>
                </TabItem>
                <TabItem Header="Beilagen" Name="sideDishes">
                    <Border BorderBrush="AliceBlue" BorderThickness="1">
                        <ListView x:Name="ListSideDishes" FontSize="17"
                                  ItemsSource="{Binding SideDishes}"
                                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"/>
                    </Border>
                </TabItem>
            </TabControl>

            <StackPanel Grid.Column="1" Orientation="Vertical">
                <StackPanel.Resources>
                    <Style TargetType="TextBox">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="FontSize" Value="15" />
                    </Style>
                </StackPanel.Resources>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <Label Content="Von: " FontWeight="Bold" />
                    <TextBox Width="100" Text="{Binding FromDate}" VerticalAlignment="Center" FontSize="14"/>
                    <Label Content="Bis: " FontWeight="Bold" />
                    <TextBox Width="100" Text="{Binding ToDate}" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>

                <!-- Monday -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label Content="Montag" Padding="5 0"
                               Grid.Column="0" Grid.ColumnSpan="2"  
                               HorizontalAlignment="Center"
                               FontWeight="Bold" FontSize="14" />

                    <StackPanel Grid.Column="0" >
                        <Label Content="Menü 1" HorizontalAlignment="Center"
                                     FontSize="14" FontWeight="Bold" Padding="0"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Name="Monday_1" Content=">"
                                        FontSize="18" FontWeight="Bold"
                                        Click="OnClick_AddDishToMeal" />

                            <StackPanel Grid.Column="1" Orientation="Vertical">

                                <TextBox Text="{Binding Meals[Monday_1].Starter}" />
                                <TextBox Text="{Binding Meals[Monday_1].MainDish}" />
                                <TextBox Text="{Binding Meals[Monday_1].SideDish}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="1" >
                        <Label Content="Menü 2" HorizontalAlignment="Center"
                                     FontSize="14" FontWeight="Bold" Padding="0"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Name="Monday_2" Content=">"
                                        FontSize="18" FontWeight="Bold"
                                        Click="OnClick_AddDishToMeal" />

                            <StackPanel Grid.Column="1" Orientation="Vertical">

                                <TextBox Text="{Binding Meals[Monday_2].Starter}" />
                                <TextBox Text="{Binding Meals[Monday_2].MainDish}" />
                                <TextBox Text="{Binding Meals[Monday_2].SideDish}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
                
                <Rectangle HorizontalAlignment="Stretch" Fill="DarkGray" Height="3"/>

                <!-- Tuesday -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label Content="Dienstag" Padding="5 0"
                               Grid.Column="0" Grid.ColumnSpan="2"  
                               HorizontalAlignment="Center"
                               FontWeight="Bold" FontSize="14"/>

                    <StackPanel Grid.Column="0" >
                        <Label Content="Menü 1" HorizontalAlignment="Center"
                                     FontSize="14" FontWeight="Bold" Padding="0"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Name="Tuesday_1" Content=">"
