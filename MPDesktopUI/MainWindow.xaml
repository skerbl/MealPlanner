                            <StackPanel Grid.Column="1" Orientation="Vertical">

                                <TextBox Text="{Binding Meals[Tuesday_1].Starter}" />
                                <TextBox Text="{Binding Meals[Tuesday_1].MainDish}" />
                                <TextBox Text="{Binding Meals[Tuesday_1].SideDish}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="1" >
                        <Label Content="Menü 2" HorizontalAlignment="Center"
                                     FontSize="14" FontWeight="Bold" Padding="0"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Name="Tuesday_2" Content=">"
                                        FontSize="18" FontWeight="Bold"
                                        Click="OnClick_AddDishToMeal" />

                            <StackPanel Grid.Column="1" Orientation="Vertical">

                                <TextBox Text="{Binding Meals[Tuesday_2].Starter}" />
                                <TextBox Text="{Binding Meals[Tuesday_2].MainDish}" />
                                <TextBox Text="{Binding Meals[Tuesday_2].SideDish}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
                
                <Rectangle HorizontalAlignment="Stretch" Fill="DarkGray" Height="3"/>

                <!-- Wednesday -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label Content="Mittwoch" Padding="5 0"
                               Grid.Column="0" Grid.ColumnSpan="2"  
                               HorizontalAlignment="Center"
                               FontWeight="Bold" FontSize="14"/>

                    <StackPanel Grid.Column="0" >
                        <Label Content="Menü 1" HorizontalAlignment="Center"
                                     FontSize="14" FontWeight="Bold" Padding="0"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Name="Wednesday_1" Content=">"
                                        FontSize="18" FontWeight="Bold"
                                        Click="OnClick_AddDishToMeal" />

                            <StackPanel Grid.Column="1" Orientation="Vertical">

                                <TextBox Text="{Binding Meals[Wednesday_1].Starter}" />
                                <TextBox Text="{Binding Meals[Wednesday_1].MainDish}" />
                                <TextBox Text="{Binding Meals[Wednesday_1].SideDish}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="1" >
                        <Label Content="Menü 2" HorizontalAlignment="Center"
                                     FontSize="14" FontWeight="Bold" Padding="0"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Name="Wednesday_2" Content=">"
                                        FontSize="18" FontWeight="Bold"
                                        Click="OnClick_AddDishToMeal" />

                            <StackPanel Grid.Column="1" Orientation="Vertical">

                                <TextBox Text="{Binding Meals[Wednesday_2].Starter}" />
                                <TextBox Text="{Binding Meals[Wednesday_2].MainDish}" />
                                <TextBox Text="{Binding Meals[Wednesday_2].SideDish}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
                
                <Rectangle HorizontalAlignment="Stretch" Fill="DarkGray" Height="3"/>

                <!-- Thursday -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label Content="Donnerstag" Padding="5 0"
                               Grid.Column="0" Grid.ColumnSpan="2"  
                               HorizontalAlignment="Center"
                               FontWeight="Bold" FontSize="14"/>

                    <StackPanel Grid.Column="0" >
                        <Label Content="Menü 1" HorizontalAlignment="Center"
                                     FontSize="14" FontWeight="Bold" Padding="0"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Name="Thursday_1" Content=">"
                                        FontSize="18" FontWeight="Bold"
                                        Click="OnClick_AddDishToMeal" />

                            <StackPanel Grid.Column="1" Orientation="Vertical">

                                <TextBox Text="{Binding Meals[Thursday_1].Starter}" />
                                <TextBox Text="{Binding Meals[Thursday_1].MainDish}" />
                                <TextBox Text="{Binding Meals[Thursday_1].SideDish}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="1" >
                        <Label Content="Menü 2" HorizontalAlignment="Center"
                                     FontSize="14" FontWeight="Bold" Padding="0"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Name="Thursday_2" Content=">"
                                        FontSize="18" FontWeight="Bold"
                                        Click="OnClick_AddDishToMeal" />

                            <StackPanel Grid.Column="1" Orientation="Vertical">

                                <TextBox Text="{Binding Meals[Thursday_2].Starter}" />
