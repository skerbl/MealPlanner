                                <TextBox Text="{Binding Meals[Thursday_2].SideDish}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>

                <Rectangle HorizontalAlignment="Stretch" Fill="DarkGray" Height="3"/>

                <!-- Friday -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label Content="Freitag" Padding="5 0"
                               Grid.Column="0" Grid.ColumnSpan="2"  
                               HorizontalAlignment="Center"
                               FontWeight="Bold" FontSize="14"/>

                    <StackPanel Grid.Column="0" >
                        <Label Content="Menü 1" HorizontalAlignment="Center"
                                     FontSize="14" FontWeight="Bold" Padding="0"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Name="Friday_1" Content=">"
                                        FontSize="18" FontWeight="Bold"
                                        Click="OnClick_AddDishToMeal" />

                            <StackPanel Grid.Column="1" Orientation="Vertical">

                                <TextBox Text="{Binding Meals[Friday_1].Starter}" />
                                <TextBox Text="{Binding Meals[Friday_1].MainDish}" />
                                <TextBox Text="{Binding Meals[Friday_1].SideDish}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="1" >
                        <Label Content="Menü 2" HorizontalAlignment="Center"
                                     FontSize="14" FontWeight="Bold" Padding="0"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Name="Friday_2" Content=">"
                                        FontSize="18" FontWeight="Bold"
                                        Click="OnClick_AddDishToMeal" />

                            <StackPanel Grid.Column="1" Orientation="Vertical">

                                <TextBox Text="{Binding Meals[Friday_2].Starter}" />
                                <TextBox Text="{Binding Meals[Friday_2].MainDish}" />
                                <TextBox Text="{Binding Meals[Friday_2].SideDish}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>

                <Rectangle HorizontalAlignment="Stretch" Fill="DarkGray" Height="3"/>

                <!-- Saturday -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label Content="Samstag" Padding="5 0"
                               Grid.Column="0" Grid.ColumnSpan="2"  
                               HorizontalAlignment="Center"
                               FontWeight="Bold" FontSize="14"/>

                    <StackPanel Grid.Column="0" >
                        <Label Content="Menü 1" HorizontalAlignment="Center"
                                     FontSize="14" FontWeight="Bold" Padding="0"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Name="Saturday" Content=">"
                                        FontSize="18" FontWeight="Bold"
                                        Click="OnClick_AddDishToMeal" />

                            <StackPanel Grid.Column="1" Orientation="Vertical">

                                <TextBox Text="{Binding Meals[Saturday].Starter}" />
                                <TextBox Text="{Binding Meals[Saturday].MainDish}" />
                                <TextBox Text="{Binding Meals[Saturday].SideDish}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" 
                                HorizontalAlignment="Right" VerticalAlignment="Bottom">

                        <TextBox Grid.Column="0" Width="200" 
                                 TextAlignment="Right" VerticalAlignment="Center" 
                                 Text="{Binding FileName}" FontSize="15" />
                        <Button Grid.Column="1" Name="SaveAsExcel" Content="Speichern"
                                FontSize="14" FontWeight="Bold" Padding="15 2" 
                                Command="{Binding SaveCommand}" />
                    </StackPanel>
                </Grid>

                
            </StackPanel>
            
        </Grid>
    </DockPanel>
</Window>
